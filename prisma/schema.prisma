generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstName   String
  lastName    String
  email       String @unique
  hash        String
  userRefCode String @unique

  student Student[]

  @@map("users")
}

model Student {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstName      String
  lastName       String
  studentRefCode String @unique
  email          String? @unique
  phone          String?

  userId String
  user   User   @relation(fields: [userId], references: [userRefCode])

  @@map("students")
}
